{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::${galeria_bucket_name}",
                "arn:aws:s3:::${galeria_bucket_name}/*"
            ]
        }
    ]
}
